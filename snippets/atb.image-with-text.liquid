{% comment %}
ATB-SCHEMA{
  "name": "Image with text",
  "class": "mount-color-button",
  "max_blocks": 3,
  "id": "image-with-text",
  "banner": "",
  "icon": "",
  "tags": "",
  "description": "",
  "settings": [
    {
      "type": "text",
      "id": "section_id",
      "label": "Section ID",
      "info": "Enter a unique ID with only letters and numbers, no spaces",
      "default": ""
    },
    {
      "type": "select",
      "id": "atb_image_height",
      "label": "Image height",
      "options": [
        {
          "value": "25vh",
          "label": "Small"
        },
        {
          "value": "50vh",
          "label": "Medium"
        },
        {
          "value": "75vh",
          "label": "Large"
        },
        {
          "value": "100vh",
          "label": "Full"
        }
      ],
      "default": "50vh",
      "info": ""
    },
    {
      "type": "select",
      "id": "atb_text_width",
      "label": "Text container width",
      "options": [
        {
          "value": "50%",
          "label": "Medium"
        },
        {
          "value": "75%",
          "label": "Large"
        },
        {
          "value": "100%",
          "label": "Full"
        }
      ],
      "default": "50%",
      "info": ""
    },
    {
      "type": "select",
      "id": "atb_text_size",
      "label": "Heading size",
      "options": [
        {
          "value": "regular",
          "label": "Regular"
        },
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "huge",
          "label": "Extra large"
        }
      ],
      "default": "regular",
      "info": ""
    },
    {
      "type": "select",
      "id": "atb_text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "horizontal-left vertical-top",
          "label": "Left top"
        },
        {
          "value": "horizontal-center vertical-top",
          "label": "Center top"
        },
        {
          "value": "horizontal-right vertical-top",
          "label": "Right top"
        },
        {
          "value": "horizontal-left vertical-middle",
          "label": "Left middle"
        },
        {
          "value": "horizontal-center vertical-middle",
          "label": "Center middle"
        },
        {
          "value": "horizontal-right vertical-middle",
          "label": "Right middle"
        },
        {
          "value": "horizontal-left vertical-bottom",
          "label": "Left bottom"
        },
        {
          "value": "horizontal-center vertical-bottom",
          "label": "Center bottom"
        },
        {
          "value": "horizontal-right vertical-bottom",
          "label": "Right bottom"
        }
      ],
      "default": "horizontal-left vertical-bottom",
      "info": ""
    },
    {
      "type": "header",
      "content": "Colors",
      "info": ""
    },
    {
      "type": "color",
      "id": "atb_color_text",
      "label": "Custom text color",
      "default": "rgba(0,0,0,0)",
      "info": ""
    },
    {
      "type": "color",
      "id": "atb_color_bg",
      "label": "Background overlay",
      "default": "rgba(0,0,0,0)",
      "info": ""
    },
    {
      "type": "header",
      "content": "Gutter",
      "info": ""
    },
    {
      "type": "checkbox",
      "id": "atb_gutter_enabled",
      "label": "Enable inner content spacing",
      "info": ""
    },
    {
      "type": "text",
      "id": "blocks",
      "label": "Block ID",
      "info": "Enter a unique ID with only letters and numbers, no spaces",
      "default": "",
      "repeatable": "Image-with-text"
    },
    {
      "type": "text",
      "id": "block_title",
      "label": "Heading",
      "default": "Image with text",
      "repeatable": "Image-with-text",
      "info": ""
    },
    {
      "type": "wysiwyg",
      "id": "block_body",
      "label": "Text",
      "default": "<p>Share your latest products, collections or promotions!</p>",
      "repeatable": "Image-with-text",
      "info": ""
    },
    {
      "type": "text",
      "id": "block_button_label",
      "label": "Button label",
      "repeatable": "Image-with-text",
      "info": ""
    },
    {
      "type": "text",
      "id": "block_url",
      "label": "Link",
      "info": "The entire block will transform into a link unless there is a label for the button.",
      "repeatable": "Image-with-text"
    },
    {
      "type": "image_picker",
      "id": "block_image",
      "label": "Background image",
      "repeatable": "Image-with-text",
      "info": ""
    }
  ],
  "warnings": [
    "repeating image fields may not be properly handled"
  ]
}ATB-SCHEMA
{% endcomment %}


{%- include 'atb-render' field:'section_id' -%}
{%- assign section_id = val -%}
{%- include 'atb-render' field:'atb_image_height' -%}
{%- assign atb_image_height = val -%}
{%- include 'atb-render' field:'atb_text_width' -%}
{%- assign atb_text_width = val -%}
{%- include 'atb-render' field:'atb_text_size' -%}
{%- assign atb_text_size = val -%}
{%- include 'atb-render' field:'atb_text_alignment' -%}
{%- assign atb_text_alignment = val -%}
{%- include 'atb-render' field:'atb_color_text' -%}
{%- assign atb_color_text = val -%}
{%- include 'atb-render' field:'atb_color_bg' -%}
{%- assign atb_color_bg = val -%}
{%- include 'atb-render' field:'atb_gutter_enabled' -%}
{%- assign atb_gutter_enabled = val -%}
{%- include 'atb-render' field:'blocks' -%}
{%- assign blocks = val -%}
{%- include 'atb-render' field:'block_title' -%}
{%- assign block_title = val -%}
{%- include 'atb-render' field:'block_body' -%}
{%- assign block_body = val -%}
{%- include 'atb-render' field:'block_button_label' -%}
{%- assign block_button_label = val -%}
{%- include 'atb-render' field:'block_url' -%}
{%- assign block_url = val -%}
{%- include 'atb-render' field:'block_image' -%}
{%- assign block_image = val -%}
{%- if atb_gutter_enabled == blank -%}
{%- assign atb_gutter_enabled = false -%}
{%- else -%}
{%- assign atb_gutter_enabled = true -%}
{%- endif -%}
{%- assign no_image = images['no_image_comparison'] -%}

<section id="shopify-section-{{section_id}}" class="shopify-section mount-color-button">
<div class="content-section gutter--{% if atb_gutter_enabled %}on{% else %}off{% endif %} image-text image-text--size-{{ blocks.size }} {% if atb_color_bg != 'rgba(0,0,0,0)' %} parent-has-inner-padding {% endif %}">

  {% for block0 in blocks %}
{%- assign my_image_key0 = block_image[forloop.index0]| split: '/files/' | last -%}
{%- assign my_image0 = images[my_image_key0] -%}

    {% render 'image-with-text-content',
      url: block_url[forloop.index0],
      button_label: block_button_label[forloop.index0],
      text_alignment: atb_text_alignment,
      text_size: atb_text_size,
      title: block_title[forloop.index0],
      body: block_body[forloop.index0],
      color_text: atb_color_text,
      color_bg: atb_color_bg,
      image: my_image0,
      shopify_attributes: block.shopify_attributes
    %}

  {% endfor %}

  {% if atb_color_text != 'rgba(0,0,0,0)' %}
    {% style %}
      #shopify-section-{{ section_id }}, 
      #shopify-section-{{ section_id }} a {
        color: {{ atb_color_text }};
      }
      #shopify-section-{{ section_id }} .button--solid {
        background: {{ atb_color_text }};
      }
      #shopify-section-{{ section_id }} .image-text__title span {
        background-image: linear-gradient(to right, {{ atb_color_text }}, {{ atb_color_text }});
      }
    {% endstyle %}
    <script type="text/javascript">
      $('#shopify-section-{{ section_id }} .button--solid').css('color', lightOrDark('{{ atb_color_text }}'));
    </script>
  {% endif %}

  {% if atb_color_bg != 'rgba(0,0,0,0)' %}
    {% style %}
      #shopify-section-{{ section_id }} .image-text__background:before {
        background: {{ atb_color_bg }};
      }
    {% endstyle %}
  {% endif %}

  {% style %}
    #shopify-section-{{ section_id }} .image-text {
      height: {{ atb_image_height }};
    }
    #shopify-section-{{ section_id }} .image-text__content > div {
      max-width: {{ atb_text_width }};
    }
  {% endstyle %}
  
</div>

</section>