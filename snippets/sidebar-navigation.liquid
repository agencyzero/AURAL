<ul class="sidebar__menu">




	{% for link in menu.links %}

		<li class="{% if link.links != blank %} has-submenu {% endif %}" {% if link.links != blank %} aria-haspopup="true" {% endif %}>

			<a href="{% if link.links != blank %}javascript: void(0){% else %}{{ link.url }}{% endif %}" {% if link.active or link.child_active %} class="selected" {% endif %}>
				<span style="flex: 1;"><span class="underline-animation">{{ link.title }}</span></span>
				{% if link.links != blank %} {% render 'theme-symbols', icon: 'arrow' %} {% endif %}
			</a>

			{% if link.links != blank %}

				<div class="sidebar__submenu sidebar__submenu--first" aria-expanded="false">

					<div class="sidebar__container">

						<div class="sub-menu">

							<ul>

								{% for childlink in link.links %}

									<li class="{% if childlink.links != blank or childlink.title contains "BRAND"%} has-submenu has-second-submenu {% endif %}" {% if childlink.links != blank  or childlink.title contains "BRAND"%} aria-haspopup="true" {% endif %}>

										<a href="{% if childlink.links != blank  or childlink.title contains "BRAND"%}javascript: void(0){% else %}{{ childlink.url }}{% endif %}" {% if childlink.active or childlink.child_active %} class="selected" {% endif %}>
											<span style="flex: 1;"><span class="underline-animation">{{ childlink.title | escape }}</span></span>
											{% if childlink.links != blank  or childlink.title contains "BRAND"%} {% render 'theme-symbols', icon: 'arrow' %} {% endif %}
										</a>

										{% if childlink.links != blank or childlink.title contains "BRAND" %}
											
											<div class="sidebar__submenu sidebar__submenu--second" aria-expanded="false">

												<div class="sidebar__container">

													<div class="sub-menu">

														<ul>

															{% if childlink.title contains "BY BRAND" %}
																{% for vendor in shop.vendors %}
																	{% assign vendor_handle = vendor | handleize %}
																	{% assign vendor_product_count = collections[vendor_handle].products_count %}
																	<li class="brand">
																		{% if vendor_product_count == 0 %}
																		{% elsif vendor_product_count == 1%}
																			<a href="/products/{{ collections[vendor_handle].products[0].handle }}" {% if subchildlink.active %} class="selected" {% endif %}><span class="underline-animation">{{ vendor | escape }}</span></a> 
																		{% else %}
																			<a href="/collections/{{ vendor_handle }}" {% if subchildlink.active %} class="selected" {% endif %}><span class="underline-animation">{{ vendor | escape }}</span></a>
																		{% endif %}
																	</li>

																{% endfor %}

															{% else %}
																{% for subchildlink in childlink.links %}

																	<li class="{{childlink.title}}">
																		{% if subchildlink.object.products_count == 0 %}
																		{% elsif subchildlink.object.products_count == 1%}
																			<a href="/products/{{ subchildlink.object.products[0].handle }}" {% if subchildlink.active %} class="selected" {% endif %}><span class="underline-animation">{{ subchildlink.title | escape }}</span></a> 
																		{% else %}
																			<a href="{{ subchildlink.url }}" {% if subchildlink.active %} class="selected" {% endif %}><span class="underline-animation">{{ subchildlink.title | escape }}</span></a>
																		{% endif %}
																	</li>

																{% endfor %}
															{% endif %}

														</ul>

													</div>

												</div>

											</div>

										{% endif %}

									</li>

								{% endfor %}

							</ul>
		
						</div>

					</div>

				</div>

			{% endif %}

		</li>

	{% endfor %}

</ul>