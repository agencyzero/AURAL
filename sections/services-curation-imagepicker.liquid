{%- comment -%} imagepicker.liquid {%- endcomment -%}
{% schema %}
{
	"name": "Curation Images",
	"class": "hidden",
	"max_blocks": 9,
	"blocks": [
		{
			"type": "image",
			"name": "Image",
			"settings": [
				{
					"id": "imagep",
					"type": "image_picker",
					"label": "Image"
				},
				{
		            "type": "text",
		            "id": "alt",
		            "label": "Alt Text",
		            "default": "mid century modern audio experts"
		        },
		        {
					"type": "checkbox",
					"id": "hideImg",
					"label": "Temporarily hide",
					"default": false
				}
		        
			]
		}
	]
}
{% endschema %}

