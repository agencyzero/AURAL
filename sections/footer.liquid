      },
      {
        "type": "header",
        "content": "Alt Vector"
      },
      {
        "type": "image_picker",
        "id": "lifestyle-c",
        "label": "..."
      },
      {
        "type": "text",
        "id": "alt-c",
        "label": "Alt Text"
      },
      {
        "type": "text",
        "id": "class-c",
        "label": "Class",
